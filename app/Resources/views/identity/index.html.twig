<div class="identity-background">
    <div class="identity-section container">

        <div class="identity-hr-navbar">
            <nav class="navbar navbar-fixed-top burger" role="navigation">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                            data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse center" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Home</a></li>
                        <li><a href="#">Projects</a></li>
                        <li><a href="#">Contact</a></li>
                        <li><a href="#">Other</a></li>
                    </ul>
                </div>
            </nav>
        </div>

        <div class="identity-top">
            <h1 class="center">{{ identity.title }}</h1>

            <div><p>{{ identity.description }}</p></div>

            <div class="presentation-image center">
                <img src="{{ asset('uploads/identity/') ~ identity.image }}" alt="Presentation image">
            </div>

            <p class="center">
                <a href="{{ identity.linkedin }}" target="_blank"><img
                            src="{{ asset('uploads/identity/') ~ identity.linkedinImage }}" alt="Linkedin icon"></a>
                <a href="{{ identity.github }}" target="_blank"><img
                            src="{{ asset('uploads/identity/') ~ identity.githubImage }}" alt="Github icon"></a>
            </p>
        </div>
    </div>
</div>



{% extends 'base.html.twig' %}

{% block body %}
    <div class="identity-section">
        <h1 class="main-title">{{ identity.title }}</h1>

        <div>{{ identity.description }}</div>

        <div class="image-content">
            <img src="{{ asset('uploads/identity/') ~ identity.image }}">
        </div>

        <p>
            <a href="{{ identity.linkedin }}"><img src="{{ asset('uploads/identity/') ~ identity.linkedinImage }}"></a>
            <a href="{{ identity.github }}"><img src="{{ asset('uploads/identity/') ~ identity.githubImage }}"></a>
        </p>
    </div>
{% endblock %}

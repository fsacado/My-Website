{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <div class="container">
        <div class="identity-section-show">
            <h1 class="center">{{ identity.title }}</h1>

            <div>{{ identity.description }}</div>

            <div class="presentation-image center">
                <img src="{{ asset('uploads/identity/') ~ identity.image }}" alt="Presentation image">
            </div>

            <p class="center networks">
                <a href="{{ identity.linkedin }}" target="_blank"><img
                            src="{{ asset('uploads/identity/') ~ identity.linkedinImage }}"
                            alt="Linkedin icon"></a>
                <a href="{{ identity.github }}" target="_blank"><img
                            src="{{ asset('uploads/identity/') ~ identity.githubImage }}"
                            alt="Github icon"></a>
            </p>
            <p class="center buttons">
                <a class="btn btn-info" href="{{ path('identity_edit', { 'id': identity.id }) }}">Modifier</a>
                <a class="btn btn-success" href="{{ path('home_admin') }}">Retour</a>
            </p>
        </div>
    </div>
{% endblock %}

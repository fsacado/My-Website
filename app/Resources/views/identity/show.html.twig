{% extends 'base.html.twig' %}

{% block body %}
    <h1>Identity</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ identity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ identity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ identity.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ identity.image }}</td>
            </tr>
            <tr>
                <th>Linkedin</th>
                <td>{{ identity.linkedin }}</td>
            </tr>
            <tr>
                <th>Github</th>
                <td>{{ identity.github }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('identity_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('identity_edit', { 'id': identity.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
